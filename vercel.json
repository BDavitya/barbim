{
    "version": 2,
    "builds": [{ "src": "public/index.php", "use": "vercel-php" }],
    "routes": [{ "src": "/(.*)", "dest": "public/index.php" }],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://yourdomain.com",
        "DB_DATABASE": "/app/database/database.sqlite"
    }
}
